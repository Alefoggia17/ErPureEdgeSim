<?xml version="1.0"?>
<edge_devices>
	<!-- here you can define the types of edge devices, and how many devices 
		of this type there will be in this case , there are 4 types of devices(defined 
		here), 30 percent of all devices will be of the first type, this percentage 
		is defined here <percentage> -->
		
	<device > <!-- this is a smartphone, for example -->
	
		<mobility>true</mobility><!-- the device is mobile or fixed -->
		<battery>true</battery> <!-- relies on battery? -->
		<percentage>30</percentage> <!-- percentage of this device type -->
		<batteryCapacity>20</batteryCapacity> <!-- battery capacity in Watt-Hour -->
		<idleConsumption>0.00001</idleConsumption><!-- idle energy consumption/ 
			second, default=0 .000010975 -->
		<maxConsumption>0.0011</maxConsumption><!-- max energy consumption/hour (Wh), 
			when device cpu is use at 100% , default=0 .0011 -->
		<isOrchestrator>false</isOrchestrator> <!-- it has a task orchestrator or not -->
		<generateTasks>true</generateTasks> <!-- it generates data/tasks or not -->
		<hosts>
			<host>
				<core>4</core>
				<mips>70000</mips>
				<ram>4000</ram>
				<storage>256000</storage>
				<VMs>
					<VM>
						<core>4</core>
						<mips>70000</mips>
						<ram>4000</ram>
						<storage>256000</storage> <!--256MB of caching memory used in example 6 --> 
					</VM>
				</VMs>
			</host>
		</hosts>
	</device>
	<device > <!-- this is a small server -->
		<mobility>false</mobility>
		<battery>false</battery>
		<percentage>10</percentage>
		<batteryCapacity>0</batteryCapacity>
		<idleConsumption>0.00001</idleConsumption>
		<maxConsumption>0.0011</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<generateTasks>false</generateTasks>
		<hosts>
			<host>
				<core>16</core>
				<mips>200000</mips>
				<ram>32000</ram>
				<storage>512000</storage>
				<VMs>
					<VM>
						<core>16</core>
						<mips>200000</mips>
						<ram>32000</ram>
						<storage>512000</storage>
					</VM>
				</VMs>
			</host>
		</hosts>
	</device>
	<device > <!--  this is a laptop for example -->
		<mobility>false</mobility>
		<battery>true</battery>
		<percentage>20</percentage>
		<batteryCapacity>60</batteryCapacity>
		<idleConsumption>0.00001</idleConsumption>
		<maxConsumption>0.0011</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<generateTasks>false</generateTasks>
		<hosts>
			<host>
				<core>4</core>
				<mips>150000</mips>
				<ram>8000</ram>
				<storage>512000</storage>
				<VMs>
					<VM>
						<core>4</core>
						<mips>150000</mips>
						<ram>8000</ram>
						<storage>512000</storage>
					</VM>
				</VMs>
			</host>
		</hosts>
	</device>
	<device >
		<mobility>false</mobility>
		<battery>false</battery>
		<percentage>40</percentage>
		<batteryCapacity>0</batteryCapacity>
		<idleConsumption>0.00001</idleConsumption>
		<maxConsumption>0.0011</maxConsumption>
		<isOrchestrator>false</isOrchestrator>
		<generateTasks>true</generateTasks>
		<hosts>
			<host>
				<core>2</core>
				<mips>70000</mips>
				<ram>4000</ram>
				<storage>64000</storage> <!-- this is a simple sensor that has no computing capacity -->
				<VMs>
					<VM>
						<core>1</core>
						<mips>70000</mips>
						<ram>4000</ram>
						<storage>0</storage>
					</VM>
				</VMs>
			</host>
		</hosts>
	</device>
</edge_devices>